# Configuración de la aplicación
SECRET_KEY=tu_clave_secreta_aqui
FLASK_ENV=development

# Configuración de la base de datos
DATABASE_PATH=usuarios.db

# Configuración del administrador
ADMIN_EMAIL=admin@inefable.com
ADMIN_PASSWORD=InefableAdmin2024!

# Configuración de correo electrónico para notificaciones
# Gmail SMTP (recomendado)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=tu_correo@gmail.com
MAIL_PASSWORD=tu_contraseña_de_aplicacion
MAIL_DEFAULT_SENDER=tu_correo@gmail.com

# Instrucciones para configurar Gmail:
# 1. Habilita la verificación en 2 pasos en tu cuenta de Gmail
# 2. Ve a "Contraseñas de aplicaciones" en tu cuenta de Google
# 3. Genera una contraseña de aplicación para "Correo"
# 4. Usa esa contraseña generada en MAIL_PASSWORD (no tu contraseña normal)

# Otras opciones de SMTP:
# Outlook/Hotmail:
# MAIL_SERVER=smtp-mail.outlook.com
# MAIL_PORT=587

# Yahoo:
# MAIL_SERVER=smtp.mail.yahoo.com
# MAIL_PORT=587

